# Database Configuration
# PostgreSQL connection string - REQUIRED
# For production, add ?sslmode=require at the end
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"

# Authentication
# Secret key for JWT tokens - REQUIRED
# Generate a strong random string for production (e.g., use: openssl rand -base64 32)
JWT_SECRET="your-secret-key-change-in-production"

# Groq LLM API
# Get your API key from: https://console.groq.com/ - REQUIRED
GROQ_API_KEY="your-groq-api-key"
# Optional: Model to use (default: llama-3.1-8b-instant)
GROQ_MODEL="llama-3.1-8b-instant"

# SMTP Email Configuration (for OTP emails)
# Gmail SMTP settings (or your email provider)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="your-email@gmail.com"
# Optional: Set to "true" if using port 465 (SSL)
SMTP_SECURE="false"

# OpenAI API (Optional - not required)
# Voice features use free browser APIs, but you can use OpenAI if needed
# OPENAI_API_KEY="your-openai-api-key"

